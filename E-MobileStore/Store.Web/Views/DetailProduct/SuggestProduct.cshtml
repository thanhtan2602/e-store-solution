@model IEnumerable<Store.WebService.ViewModels.vmProduct>
<div class="access-sg owl-carousel owl-loaded filtering">
    @foreach(var product in Model)
    {
        <div class="owl-item active" style="width: 300px;">
            <div class="item">
                <a href="@Url.Action("Index", "DetailProduct", new { productId = product.ProductId })">
                    <div class="img-access-sg">
                        <img class=" ls-is-cached lazyloaded" data-src="@product.ProductImages?.FirstOrDefault(x => x.Position.Trim() == "1")?.ImageURL" alt="@product.ProductImages?.FirstOrDefault(x => x.Position.Trim() == "1")?.ImageName" src="@product.ProductImages?.FirstOrDefault(x => x.Position.Trim() == "1")?.ImageURL">
                    </div>
                    <h3>@product.ProductName</h3>
                    <span>
                        <b>@(product.Price)₫</b>
                    </span>
                </a>
            </div>
        </div>
    }
</div>
   