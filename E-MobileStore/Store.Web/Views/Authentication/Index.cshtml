<link rel="stylesheet" href="~/css/layout/authen.css" asp-append-version="true" />
<div id="wrapper">
	<form action="/nguoi-dung/thong-tin-dang-nhap" method="post" id="form-login">
		<h1 class="form-heading">
			Đăng nhập
		</h1>
		@if (ViewBag.ErrorMessage != null)
		{
		<div class="alert alert-danger">
		@ViewBag.ErrorMessage
		</div>
		}
		<p class="text-danger">*Vui lòng điền đầy đủ thông tin</p>
		<div class="form-group">
			<i class="far fa-user"></i>
			<input type="text" name="Username" class="form-input" value="" id="username" placeholder="Tên đăng nhập" />
		</div>
		<div class="form-group">
			<i class="fa fa-key"></i>
			<input type="password" name="Password" class="form-input" value="" placeholder="Mật khẩu" id="password-1" />
			<div id="eye-1">
				<i class="fa fa-eye"></i>
			</div>
		</div>
		<input type="submit" value="Đăng nhập" class="form-submit" disabled />
		<p class="option-authen">Bạn chưa có tài khoản ? <a href="/nguoi-dung/dang-ky">Đăng ký</a> </p>
	</form>
</div>
<script src="~/js/authen/signin.js"></script>
